<h1 align="center">Create a new Category</h1>

<%= render 'shared/errors', obj: @category %>

<div class='row'>
	<div class='col-md-8 col-md-offset-2'>
		<%= form_for @category, html: { class: "form-horizontal", role: "form" } do |f| %>
			<div class='form-group'>
				<div class='control-label col-sm-2'>
					<%= f.label :name %>
				</div>
				<div class='col-md-8'>
					<%= f.text_field :name, class: 'form-control',
										placeholder: 'Enter Category name', autofocus: true %>
				</div>
			</div>



			<div class='form-group'>
				<div class='col-md-8 col-md-offset-2'>
					<%= f.submit 'Create new category', class: 'btn btn-lg btn-primary' %>
				</div>
			</div>

		<% end %>
		<div class='col-md-4 col-md-offset-3'>
			[ <%= link_to 'Back to articles listing', articles_path %> ]
		</div>
	</div>
</div>
